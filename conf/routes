# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

GET         /movies              controllers.Application.getMovies

GET         /lists               controllers.Application.getFavoriteLists

GET         /favorite            controllers.Application.getFavoriteListById

POST        /movie               controllers.Application.addMovieToFavoriteList

POST        /list                controllers.Application.addFavoriteList




# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

